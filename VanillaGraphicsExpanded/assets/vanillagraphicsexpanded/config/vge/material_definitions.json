  "mapping": [
    {
      "id": "survival-metal-blocks",
      "description": "Mark typical metal block texture families as metallic.",
      "match": {
        "glob": "assets/**/textures/block/**/metal/**/*.png"
      },
      "values": {
        "material": "metal_generic"
      }
    },
    {
      "id": "vge-example-explicit-overrides-do-not-match",
      "description": "Example only: explicit texture overrides (this glob intentionally matches nothing).",
      "match": {
        "glob": "assets/vanillagraphicsexpanded/textures/__example__/never_matches.png"
      },
      "values": {
        "material": "stone",
        "overrides": {
          "materialParams": "mymod:textures/vge/params/stone/granite_pbr.png",
          "normalHeight": "mymod:textures/vge/normalheight/stone/granite_nh.dds"
        }
      }
    },
    {
      "id": "vge-example-materialparams-scale-do-not-match",
      "description": "Example only: scale the packed materialParams override channels (this glob intentionally matches nothing).",
      "match": {
        "glob": "assets/vanillagraphicsexpanded/textures/__example__/never_matches_material_scale.png"
      },
      "values": {
        "material": "stone",
        "overrides": {
          "materialParams": "mymod:textures/vge/params/stone/granite_pbr.png",
          "scale": {
            "roughness": 1.25,
            "metallic": 0.75,
            "emissive": 2.0
          }
        }
      }
    },
    {
      "id": "vge-example-normalheight-scale-do-not-match",
