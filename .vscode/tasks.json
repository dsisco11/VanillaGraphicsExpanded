{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tail: VintageStory client-debug.log",
            "command": "pwsh",
            "type": "process",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "$log = Join-Path $env:APPDATA 'VintagestoryData\\Logs\\client-debug.log'; New-Item -ItemType File -Force -Path $log | Out-Null; Write-Host '== VSLOGTAIL BEGIN =='; Write-Host $log; Write-Host '== VSLOGTAIL READY =='; Get-Content -Path $log -Wait -Tail 50"
            ],
            "isBackground": true,
            "problemMatcher": {
                "owner": "vintagestory-logtail",
                "pattern": {
                    "regexp": "^(.*)$",
                    "message": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^== VSLOGTAIL BEGIN ==$",
                    "endsPattern": "^== VSLOGTAIL READY ==$"
                }
            },
            "presentation": {
                "panel": "dedicated",
                "reveal": "always",
                "focus": false,
                "close": false,
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "build + tail (RenderDoc)",
            "dependsOn": [
                "build",
                "tail: VintageStory client-debug.log"
            ],
            "dependsOrder": "parallel",
            "problemMatcher": []
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "-c",
                "Debug",
                "${workspaceFolder}/VanillaGraphicsExpanded/VanillaGraphicsExpanded.csproj"
            ],
            "problemMatcher": "$msCompile",
            "presentation": {
                "panel": "dedicated",
                "reveal": "never",
                "focus": false,
                "close": false,
                "showReuseMessage": false
            }
        },
        {
            "label": "package",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/CakeBuild/CakeBuild.csproj"
            ],
            "problemMatcher": "$msCompile",
            "presentation": {
                "panel": "dedicated",
                "reveal": "never",
                "focus": false,
                "close": false,
                "showReuseMessage": false
            }
        },
        {
            "label": "build (Cake)",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "-c",
                "Debug",
                "${workspaceFolder}/CakeBuild/CakeBuild.csproj"
            ],
            "problemMatcher": "$msCompile",
            "presentation": {
                "panel": "dedicated",
                "reveal": "never",
                "focus": false,
                "close": false,
                "showReuseMessage": false
            }
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "-c",
                "Debug",
                "${workspaceFolder}/VanillaGraphicsExpanded.Tests/VanillaGraphicsExpanded.Tests.csproj"
            ],
            "problemMatcher": "$msCompile",
            "presentation": {
                "panel": "new",
                "reveal": "never",
                "focus": false,
                "close": true,
                "showReuseMessage": false
            }
        },
        {
            "label": "Test",
            "command": "dotnet",
            "type": "process",
            "dependsOn": [
                "Clean"
            ],
            "dependsOrder": "sequence",
            "args": [
                "test",
                "-c",
                "Debug",
                "${workspaceFolder}/VanillaGraphicsExpanded.Tests/VanillaGraphicsExpanded.Tests.csproj",
                "-v",
                "normal"
            ],
            "problemMatcher": "$msCompile",
            "presentation": {
                "panel": "new",
                "reveal": "never",
                "focus": false,
                "close": true,
                "showReuseMessage": false
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}